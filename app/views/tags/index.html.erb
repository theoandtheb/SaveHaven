  <div class="medium-10 medium-offset-1 columns">
<div class="padding-10"></div>
<div class="padding-10"></div>

<div class="row">
<div class="medium-12 columns">
    <h1>Listing tags</h1>

        <table>
          <thead>
            <tr>
              <th>Location</th>
              <!-- <th>Note</th> -->
              <!-- <th>Url</th> -->
              <!-- <th>Audio</th> -->
              <!-- <th>Video</th> -->
              <!-- <th>Image</th> -->
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @tags.each do |tag| %>
              <tr>
                <td><%= tag.location %></td>
                <!-- <td><%= tag.note %></td> -->
                <!-- <td><%= tag.url %></td> -->
                <!-- <td><%= tag.audio %></td> -->
                <!-- <td><%= tag.video %></td> -->
                <!-- <td><%= tag.image %></td> -->
